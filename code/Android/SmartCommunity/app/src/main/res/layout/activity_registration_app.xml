<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.project.community.ui.life.minsheng.RegistrationAppActivity">

    <include layout="@layout/pub_layout_toolbar" />

    <RelativeLayout
        android:id="@+id/ll_registration_hospital"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_height"
        android:layout_gravity="center_vertical"
        android:background="@drawable/press_selector_rad10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="37dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/registration_hospital"
            android:textColor="@color/point_selected_color"
            android:textSize="@dimen/common_txt_size"
            android:layout_alignBaseline="@+id/tv_hospital_arrow"
            android:layout_alignBottom="@+id/tv_hospital_arrow"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_hospital_arrow"
            android:hint="@string/registration_change"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="7dp"
            android:textSize="15sp"
            android:textColor="#999999"
            android:drawableRight="@mipmap/iv_arrow_right" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ll_registration_administrative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_height"
        android:layout_gravity="center_vertical"
        android:background="@drawable/press_selector_rad10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/registration_administrative"
            android:textColor="@color/point_selected_color"
            android:textSize="@dimen/common_txt_size" />

        <TextView
            android:id="@+id/tv_hospital_administrative"
            android:hint="@string/registration_change"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="7dp"
            android:textSize="15sp"
            android:textColor="#999999"
            android:drawableRight="@mipmap/iv_arrow_right" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ll_registration_doctor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_height"
        android:layout_gravity="center_vertical"
        android:background="@drawable/press_selector_rad10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/registration_doctor"
            android:textColor="@color/point_selected_color"
            android:textSize="@dimen/common_txt_size" />

        <TextView
            android:id="@+id/tv_hospital_doctor"
            android:hint="@string/registration_change"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="7dp"
            android:textSize="15sp"
            android:textColor="#999999"
            android:drawableRight="@mipmap/iv_arrow_right" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ll_registration_appointment_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_height"
        android:layout_gravity="center_vertical"
        android:background="@drawable/press_selector_rad10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/registration_appointment_time"
            android:textColor="@color/point_selected_color"
            android:textSize="@dimen/common_txt_size" />

        <TextView
            android:id="@+id/tv_appointment_time"
            android:hint="@string/registration_change"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="7dp"
            android:textSize="15sp"
            android:textColor="#999999"
            android:drawableRight="@mipmap/iv_arrow_right" />
    </RelativeLayout>

    <com.project.community.view.MyButton
        android:id="@+id/btn_appointment_summit"
        android:text="提交"
        android:textSize="@dimen/common_txt_size"
        android:layout_marginTop="30dp"
        android:background="@drawable/press_button_rad10dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_height" />

</LinearLayout>
