<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_gray_bg">

    <include layout="@layout/pub_layout_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.project.community.view.MyScrollview
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingBottom="44dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/order_detail_address"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/d24_icon1"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_gray_333333"
                    android:text="一区一栋1单元1001"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="62dp" />
                <LinearLayout
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:paddingLeft="15dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_gray_999999"
                        android:text="用户名:"
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/order_detail_name"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:paddingLeft="5dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_gray_333333"
                        android:text="西贝"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:paddingTop="5dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:paddingLeft="15dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_gray_999999"
                        android:text="类型:"
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/order_detail_type"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:paddingLeft="5dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_gray_333333"
                        android:text="水电"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:id="@+id/order_detail_content"
                    android:lineSpacingExtra="3dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:paddingBottom="10dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_gray_333333"
                    android:text="水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电水电"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <GridView
                    android:id="@+id/order_detail_imgs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:horizontalSpacing="6dp"
                    android:background="@color/white"
                    android:numColumns="3"/>
                <LinearLayout
                    android:background="@color/white"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:paddingLeft="15dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_gray_999999"
                        android:text="预约时间段:"
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/order_detail_time"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:paddingLeft="5dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_gray_333333"
                        android:text="2017/01/01  10:00"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:background="@color/white"
                    android:layout_marginTop="1dp"
                    android:paddingTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:paddingLeft="15dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:textSize="11sp"
                        android:textColor="@color/color_gray_999999"
                        android:text="交易单号:  "
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/order_detail_jiaoyi_danhao"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:paddingLeft="5dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:textSize="11sp"
                        android:textColor="@color/color_gray_999999"
                        android:text="44121215111212121"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:background="@color/white"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:paddingLeft="15dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:textSize="11sp"
                        android:textColor="@color/color_gray_999999"
                        android:text="下单时间:  "
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/order_detail_xiadan_time"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:paddingLeft="5dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:textSize="11sp"
                        android:textColor="@color/color_gray_999999"
                        android:text="2017-01-01  10:00:53"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="受理"
                    android:textStyle="bold"
                    android:textColor="@color/yellow"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/order_detail_recylerview"
                        android:background="@color/white"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>


                <LinearLayout
                    android:paddingTop="15dp"
                    android:paddingBottom="21dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/order_detail_et_dispose"
                        android:gravity="top"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/press_et_gray10dp"
                        android:textColor="@color/color_gray_333333"
                        android:textColorHint="@color/color_gray_999999"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:textSize="14sp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:hint="输入处理过程"
                        android:minHeight="155dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <TextView
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/color_gray_333333"
                    android:textSize="14sp"
                    android:text="图片"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <com.project.community.view.MyGridView
                    android:id="@+id/order_detail_add_imgs"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="21dp"
                    android:layout_marginBottom="20dp"
                    android:horizontalSpacing="6dp"
                    android:verticalSpacing="6dp"
                    android:numColumns="3">

                </com.project.community.view.MyGridView>
            </LinearLayout>
        </com.project.community.view.MyScrollview>

        <Button
            android:id="@+id/order_detail_complete"
            android:text="已完成"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:background="@color/login_bottom_txt"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="44dp" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
