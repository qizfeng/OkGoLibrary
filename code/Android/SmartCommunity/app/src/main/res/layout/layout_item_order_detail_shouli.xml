<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="50dp"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/item_view_1"
                android:layout_gravity="center"
                android:background="#E7E7E7"
                android:layout_width="3dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/item_cirimags"
                android:layout_gravity="center"
                android:src="@mipmap/d41_dian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/item_view_2"
                android:layout_gravity="center"
                android:background="#E7E7E7"
                android:layout_width="3dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_name"
                android:textColor="@color/color_gray_666666"
                android:textSize="14sp"
                android:text="提交成功"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/item_time"
                android:textColor="@color/color_gray_999999"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:text="2017/01/01  16:00"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/item_iscurrt"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <View
                android:layout_gravity="center"
                android:background="#E7E7E7"
                android:layout_width="3dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:visibility="visible"
                android:id="@+id/item_iscurrt_evaluate"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/layout_stars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/layout_stars_img_1"
                        android:layout_width="16dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/d29_icon1"/>
                    <ImageView
                        android:id="@+id/layout_stars_img_2"
                        android:layout_width="16dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/d29_icon1"/>
                    <ImageView
                        android:id="@+id/layout_stars_img_3"
                        android:layout_width="16dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/d29_icon1_p"/>
                    <ImageView
                        android:id="@+id/layout_stars_img_4"
                        android:layout_width="16dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/d29_icon1_p"/>
                    <ImageView
                        android:id="@+id/layout_stars_img_5"
                        android:layout_width="16dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/d29_icon1_p"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="2dp"
                    android:textColor="@color/color_gray_999999"
                    android:textSize="12sp"
                    android:paddingBottom="10dp"
                    android:text="师傅人真好"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/item_iscurrt_reylerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="1dp">
            <View
                android:layout_width="3dp"
                android:layout_height="1dp"
                android:background="#E7E7E7"/>

        </LinearLayout>
        <View
            android:id="@+id/item_view_line_"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E7E7E7"/>
    </LinearLayout>



</LinearLayout>