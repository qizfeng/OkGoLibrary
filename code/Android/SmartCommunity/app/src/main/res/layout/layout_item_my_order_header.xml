<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/header_title"
        android:paddingTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="@color/color_gray_333333"
        android:textSize="@dimen/common_txt_size"
        android:paddingLeft="@dimen/dp_15"
        android:gravity="center_vertical"
        android:text="玉林酒店"/>
    <LinearLayout
        android:paddingBottom="12dp"
        android:paddingTop="3dp"
        android:paddingRight="15dp"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/header_time"
            android:text="2016-12-01    12:00"
            android:textColor="@color/color_gray_999999"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/header_status"
            android:textColor="@color/color_orange_ff961b"
            android:text="待发货"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>