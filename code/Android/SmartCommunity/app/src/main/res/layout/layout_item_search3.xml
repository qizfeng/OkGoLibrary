<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cj="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/c1_image2" />

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="今日早知道知道知道打两份吉林大街鲁大师就发送到"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_txt_size" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/layout_stars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                    <com.hedgehog.ratingbar.RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        cj:clickable="false"
                        cj:halfstart="true"
                        cj:starCount="5"
                        cj:starImagePadding="5dp"
                        cj:starImageHeight="15dp"
                        cj:starImageWidth="18dp"
                        cj:starEmpty="@mipmap/d29_icon1_p"
                        cj:starHalf="@mipmap/d27_banxing"
                        cj:starFill="@mipmap/d29_icon1"/>
                    <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginLeft="2dp"-->
                        <!--android:layout_marginRight="6dp"-->
                        <!--android:src="@mipmap/d29_icon1" />-->

                    <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginRight="6dp"-->
                        <!--android:src="@mipmap/d29_icon1" />-->

                    <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginRight="6dp"-->
                        <!--android:src="@mipmap/d29_icon1" />-->

                    <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginRight="6dp"-->
                        <!--android:src="@mipmap/d29_icon1_p" />-->

                    <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginRight="6dp"-->
                        <!--android:src="@mipmap/d29_icon1_p" />-->
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_wenjuan"
                    style="@style/rectangle_category_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingTop="2dp"
                    android:text="物业认证"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/tv_comment_num"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="地址:北京市丰台区云岗北区西里物美超市往东100米云岗中学对面果然鲜" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>