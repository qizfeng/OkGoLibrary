<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="188dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_map_community"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <ImageView
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:src="@mipmap/d54_tx" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="负责人:张三"
            android:textColor="@color/color_gray_666666"
            android:textSize="@dimen/common_txt_size" />

        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15210213731"
            android:layout_marginTop="3dp"
            android:textColor="@color/color_gray_999999"
            android:textSize="@dimen/common_txt_size_small" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安装时间:2017/09/18"
            android:layout_marginTop="3dp"
            android:textColor="@color/color_gray_999999"
            android:textSize="@dimen/common_txt_size_small" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/d45_sanjiao" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_5"
        android:background="@color/transparent" />
</LinearLayout>