<?xml version="1.0" encoding="UTF-8"?>
    <LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
    android:layout_width="wrap_content"
    android:layout_height="10dp"
    android:background="@color/common_gray_bg"/>
    <LinearLayout
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="39dp">
        <TextView
            android:id="@+id/item_all_order_tv_time"
            android:text="2016-12-01    12:00"
            android:textColor="@color/color_gray_999999"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_all_order_tv_type"
            android:text="待发货"
            android:textColor="@color/yellow_ff961b"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@color/common_gray_bg"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_all_order_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货人: 西贝"
                android:textColor="@color/color_gray_333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_all_order_tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="一区5号楼1单元1001"
                android:textColor="@color/color_gray_333333"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_all_order_tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13884242797"
                android:textColor="@color/color_gray_333333"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/item_all_order_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="¥2"
                android:textColor="@color/yellow_ff961b"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <com.project.community.view.MyButton
            android:id="@+id/item_all_order_btn_type"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:text="@string/all_order_fahuo"
            android:textColor="@color/color_gray_666666"
            android:background="@drawable/press_type_gray_666666"
            android:layout_width="70dp"
            android:layout_height="24dp" />
    </RelativeLayout>

</LinearLayout>