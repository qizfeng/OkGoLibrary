<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--商铺申请-->
    <style name="apply_store_tv_title">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textColorHint">@color/color_gray_999999</item>
    </style>
    <style name="apply_store_et_title">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/color_gray_999999</item>
    </style>
    <!--商铺资料-->
    <style name="shop_data_tv_title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_gray_666666</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/color_gray_999999</item>
    </style>
    <!--商铺管理-->
    <style name="shop_manager_tv_title">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">7dp</item>
        <item name="android:textColor">@color/color_gray_666666</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">@color/color_gray_999999</item>
    </style>
    <style name="MyTabLayoutTextAppearance">
        <item name="android:textSize">14sp</item>
    </style>
</resources>