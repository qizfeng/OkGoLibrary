<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:splitMotionEvents">false</item>
    </style>
    <!--toolbar替代actionbar后必须设置主题为NoActionBar-->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--控制头部据appbar的样式-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--用于控制toolbar溢出菜单的样式-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="actionMenuTextColor">#ffffff</item>
    </style>


    <!--dialog-->
    <style name="DialogActivityStyle" parent="Theme.AppCompat.Dialog">
        <!--设置dialog的背景，此处为系统给定的透明值-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!-- 是否显示标题-->
        <!-- <item name="android:windowNoTitle">true</item>　-->
        <item name="windowNoTitle">true</item>　　
        <!-- 是否浮现在activity之上-->　　　　　
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否有覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 设置Activity出现方式-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- 背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>

    </style>

    <style name="bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/common_gray_bg</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="empty_img">
        <item name="android:layout_width">@dimen/def_height</item>
        <item name="android:layout_height">@dimen/def_height</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!--tablayout-->
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/common_title_txt_size</item>
    </style>
    <style name="WuyeTabLayoutTextStyle">
        <item name="android:textSize">@dimen/common_sub_title_txt_size</item>
    </style>
    <!--圆角Button 灰色-->
    <style name="rectangle_gray_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">@dimen/common_txt_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_round_gray</item>
    </style>


    <!--圆角Button 登录-->
    <style name="rectangle_login_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">@dimen/common_txt_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rectangle_button_transparent</item>
    </style>

    <!--圆角Button 注册-->
    <style name="rectangle_register_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_round_blue</item>
    </style>
    <!--圆角Button 红色-->
    <style name="rectangle_red_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_round_red</item>
    </style>
    <!--圆角Button 红色-->
    <style name="rectangle_red_tag">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/tag_round_red</item>
    </style>
    <!--圆角Button 发送-->
    <style name="rectangle_send_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">@dimen/common_txt_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_round_blue</item>
    </style>

    <!--圆角Button 分类-->
    <style name="rectangle_category_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/button_round_category</item>
    </style>

    <!--圆角Button 资料-->
    <style name="rectangle_info_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_shape_white_border</item>
    </style>

    <!--圆角输入框-->
    <style name="rectangle_info_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">@dimen/common_txt_size</item>
        <item name="android:background">@drawable/rectangle_input</item>
        <item name="android:textColor">@color/txt_color</item>
    </style>
    <!--圆角支付背景-->
    <style name="rectangle_payment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/common_txt_size</item>
        <item name="android:background">@drawable/button_shape_payment</item>
        <item name="android:textColor">@color/txt_color</item>
    </style>
    <!--登錄圆角输入框-->
    <style name="rectangle_login_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">@dimen/common_txt_size</item>
        <item name="android:background">@drawable/rectangle_input_login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--引导图圆角按钮-->
    <style name="rectangle_guide_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">@dimen/common_txt_size</item>
        <item name="android:background">@drawable/rectangle_guide_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--评论窗口弹出动画-->
    <style name="popwin_comment_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <style name="textview_style" parent="android:Animation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">@dimen/common_txt_size</item>
        <item name="android:textColor">@color/txt_color</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!--checkbox-->
    <style name="checkbox_style">
        <item name="android:button">@drawable/checkbox_round_style</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingLeft">0dp</item>
    </style>
    <!--radiobutton-->
    <style name="radiobutton_style">
        <item name="android:button">@drawable/radiobutton_round_style</item>
    </style>
    <!--SwitchCompat-->
    <style name="switchCompat_style">
        <!-- Active thumb color & Active track color(30% transparency) switch 打开时的拇指按钮的颜色 轨迹颜色默认为30%这个颜色 -->
        <item name="colorControlActivated">@color/white</item>
        <!-- Inactive thumb color switch关闭时的拇指按钮的颜色 -->
        <item name="colorSwitchThumbNormal">@color/white</item>
        <!-- Inactive track color(30% transparency) switch关闭时的轨迹的颜色  30%这个颜色 -->
        <item name="android:colorForeground">@color/common_gray_bg</item>
    </style>

    <!--商铺未通过-->
    <style name="rectangle_me_shop_red_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color_red_d54824</item>
        <item name="android:background">@drawable/button_me_shop_red</item>
    </style>
    <!--商铺审核中-->
    <style name="rectangle_me_shop_green_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color_green_aac62d</item>
        <item name="android:background">@drawable/button_me_shop_green</item>
    </style>
    <!--申请商铺-->
    <style name="rectangle_me_shop_gray_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color_gray_666666</item>
        <item name="android:background">@drawable/button_me_shop_gray</item>
    </style>
</resources>
