<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/pub_layout_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_gray_eeeeee">

        <LinearLayout
            android:id="@+id/layout_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_15"
                android:background="@color/color_gray_eeeeee"/>
            <!--=========头像=========-->
            <RelativeLayout
                android:id="@+id/layout_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">

                <TextView
                    style="@style/textview_style"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/d4_li"
                    android:text="@string/txt_add_person_header" />

                <ImageView
                    android:id="@+id/iv_header"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@mipmap/d54_tx" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_gray_eeeeee" />

            <!--==========昵称============-->
            <RelativeLayout
                android:id="@+id/layout_nickname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">

                <LinearLayout
                    android:id="@+id/layout_left_nickname"
                    android:layout_width="@dimen/dp_105"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_style"
                        android:layout_width="wrap_content"
                        android:text="@string/txt_nickname" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_nickname"
                    style="@style/textview_style"
                    android:layout_toRightOf="@+id/layout_left_nickname"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:paddingRight="@dimen/dp_15"
                    android:textColor="@color/txt_color" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/d4_li" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_gray_eeeeee" />
            <!--=========真实姓名=========-->
            <RelativeLayout
                android:id="@+id/layout_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">

                <LinearLayout
                    android:id="@+id/layout_left_name"
                    android:layout_width="@dimen/dp_105"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_style"
                        android:layout_width="wrap_content"
                        android:text="@string/txt_add_person_name" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/textview_style"
                    android:layout_toRightOf="@+id/layout_left_name"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:paddingRight="@dimen/dp_15"
                    android:textColor="@color/txt_color" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_gray_eeeeee" />

            <!--=========绑定手机号=========-->
            <RelativeLayout
                android:id="@+id/layout_bind_mobile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">

                <LinearLayout
                    android:id="@+id/layout_left_bind_mobile"
                    android:layout_width="@dimen/dp_105"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_style"
                        android:layout_width="wrap_content"
                        android:text="@string/txt_bind_mobile" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_bind_mobile"
                    style="@style/textview_style"
                    android:layout_toRightOf="@+id/layout_left_bind_mobile"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:paddingRight="@dimen/dp_15"
                    android:textColor="@color/txt_color" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_gray_eeeeee" />


            <!--=========修改密码=========-->
            <RelativeLayout
                android:id="@+id/layout_modify_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">

                <LinearLayout
                    android:id="@+id/layout_left_modify_pwd"
                    android:layout_width="@dimen/dp_105"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_style"
                        android:layout_width="wrap_content"
                        android:text="@string/txt_modify_pwd" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_modify_pwd"
                    style="@style/textview_style"
                    android:layout_toRightOf="@+id/layout_left_modify_pwd"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:paddingRight="@dimen/dp_15"
                    android:textColor="@color/txt_color" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/d4_li" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_15"
                android:background="@color/color_gray_eeeeee" />

            <!--填写房屋编号-->
            <RelativeLayout
                android:id="@+id/layout_houseno"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">

                <LinearLayout
                    android:id="@+id/layout_left_houseno"
                    android:layout_width="@dimen/dp_105"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_style"
                        android:layout_width="wrap_content"
                        android:text="@string/txt_write_houseno" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_houseno"
                    style="@style/textview_style"
                    android:layout_toRightOf="@+id/layout_left_houseno"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:paddingRight="@dimen/dp_15"
                    android:textColor="@color/txt_color" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/d4_li" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_gray_eeeeee" />


            <!--============是否是业主==========-->
            <RelativeLayout
                android:id="@+id/layout_is_owner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">

                <LinearLayout
                    android:id="@+id/layout_left_is_owner"
                    android:layout_width="@dimen/dp_105"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_style"
                        android:layout_width="wrap_content"
                        android:text="@string/txt_is_owner" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_is_owner"
                    style="@style/textview_style"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:paddingRight="@dimen/dp_15"
                    android:textColor="@color/txt_color"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/d4_li" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_gray_eeeeee" />

            <!--==========和户主关系=========-->
            <RelativeLayout
                android:id="@+id/layout_relative"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/layout_left_relative"
                    android:layout_width="@dimen/dp_105"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_style"
                        android:layout_width="wrap_content"
                        android:text="@string/txt_add_person_relative" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_relative"
                    style="@style/textview_style"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_toRightOf="@+id/layout_left_relative"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/txt_color" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/d4_li" />
            </RelativeLayout>

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_gray_eeeeee" />

            <!--===========职业============-->
            <RelativeLayout
                android:id="@+id/layout_position"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">

                <LinearLayout
                    android:id="@+id/layout_left_position"
                    android:layout_width="@dimen/dp_105"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_style"
                        android:layout_width="wrap_content"
                        android:text="@string/txt_add_person_position" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_position"
                    style="@style/textview_style"
                    android:layout_toRightOf="@+id/layout_left_position"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:paddingRight="@dimen/dp_15"
                    android:textColor="@color/txt_color" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/d4_li" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_gray_eeeeee" />


            <!--===========身份证号=========-->
            <RelativeLayout
                android:id="@+id/layout_idcard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">

                <LinearLayout
                    android:id="@+id/layout_left_idcard"
                    android:layout_width="@dimen/dp_105"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_style"
                        android:layout_width="wrap_content"
                        android:text="@string/txt_add_person_idcard" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_idcard"
                    style="@style/textview_style"
                    android:layout_toRightOf="@+id/layout_left_idcard"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:paddingRight="@dimen/dp_15"
                    android:textColor="@color/txt_color" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_gray_eeeeee" />
            <!--===========年龄===========-->

            <RelativeLayout
                android:id="@+id/layout_age"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">

                <LinearLayout
                    android:id="@+id/layout_left_age"
                    android:layout_width="@dimen/dp_105"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_style"
                        android:layout_width="wrap_content"
                        android:text="@string/txt_add_person_age" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_age"
                    style="@style/textview_style"
                    android:gravity="right|center_vertical"
                    android:paddingRight="@dimen/dp_15"
                    android:layout_toRightOf="@+id/layout_left_age"
                    android:textColor="@color/txt_color" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_gray_eeeeee" />
            <!--============出生日期===========-->
            <RelativeLayout
                android:id="@+id/layout_birthday"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">

                <LinearLayout
                    android:id="@+id/layout_left_birthday"
                    android:layout_width="@dimen/dp_105"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_style"
                        android:layout_width="wrap_content"
                        android:text="@string/txt_add_person_birthday" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_birthday"
                    style="@style/textview_style"
                    android:gravity="right|center_vertical"
                    android:paddingRight="@dimen/dp_15"
                    android:layout_toRightOf="@+id/layout_left_birthday"
                    android:textColor="@color/txt_color" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_gray_eeeeee" />

            <!--==========民族=========-->
            <RelativeLayout
                android:id="@+id/layout_nation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">

                <LinearLayout
                    android:id="@+id/layout_left_nation"
                    android:layout_width="@dimen/dp_105"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_style"
                        android:layout_width="wrap_content"
                        android:text="@string/txt_add_person_nation" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_nation"
                    style="@style/textview_style"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_toRightOf="@+id/layout_left_nation"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/txt_color" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/d4_li" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_gray_eeeeee" />
            <!--============宗教信仰=============-->
            <RelativeLayout
                android:id="@+id/layout_religion"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">

                <LinearLayout
                    android:id="@+id/layout_left_religion"
                    android:layout_width="@dimen/dp_105"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_style"
                        android:layout_width="wrap_content"
                        android:text="@string/txt_add_person_religion" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_religion"
                    style="@style/textview_style"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_toRightOf="@+id/layout_left_religion"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/txt_color" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/d4_li" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_gray_eeeeee" />

            <!--===========党派==========-->
            <RelativeLayout
                android:id="@+id/layout_party"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">

                <LinearLayout
                    android:id="@+id/layout_left_party"
                    android:layout_width="@dimen/dp_105"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_style"
                        android:layout_width="wrap_content"
                        android:text="@string/txt_add_person_party" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_party"
                    style="@style/textview_style"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_toRightOf="@+id/layout_left_party"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/txt_color" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/d4_li" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_15"
                android:background="@color/color_gray_eeeeee" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
