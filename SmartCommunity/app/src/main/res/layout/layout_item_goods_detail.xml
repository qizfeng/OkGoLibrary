<?xml version="1.0" encoding="UTF-8"?>
    <LinearLayout
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_goods_detail_cover"
            android:src="@mipmap/c1_image2"
            android:scaleType="centerCrop"
            android:layout_width="89dp"
            android:layout_height="63dp" />
        <LinearLayout
            android:layout_marginLeft="13dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_goods_detail_name"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/color_gray_333333"
                android:textSize="13sp"
                android:text="郑中牛肉面"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_goods_detail_price"
                    android:textColor="@color/yellow_ff961b"
                    android:textSize="12sp"
                    android:text="¥21"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_goods_detail_num"
                    android:textColor="@color/yellow_ff961b"
                    android:textSize="12sp"
                    android:text="x1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/item_line"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/common_gray_bg"/>
</LinearLayout>