<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <android.webkit.WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="@color/white"/>
    <TextView
        android:id="@+id/btn_wenjuan"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_35"
        style="@style/rectangle_info_input"
        android:gravity="center_vertical"
        android:layout_marginTop="-1dp"
        android:drawableRight="@mipmap/iv_arrow_right"
        android:textColor="@color/colorPrimary"
        android:text="@string/txt_wenjuan"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:visibility="visible"
        android:background="@color/color_gray_eeeeee"/>
    <TextView
        android:id="@+id/tv_comment_tips"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/white"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:paddingLeft="24px"
        android:textSize="@dimen/common_txt_size"
        android:gravity="center_vertical"
        android:text="评论(0)"/>
</LinearLayout>