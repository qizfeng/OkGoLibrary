<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_family_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/layout_tab"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp_15">

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/d24_icon1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_location"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_family_no"
                style="@style/textview_style"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textSize="@dimen/common_sub_title_txt_size" />

            <TextView
                android:id="@+id/tv_family_addr"
                style="@style/textview_style"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_5"
                android:text=""
                android:textColor="@color/color_gray_666666" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15" />
</LinearLayout>