<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/dp_55">

        <LinearLayout
            android:id="@+id/layout_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <!--=========头像=========-->
            <RelativeLayout
                android:id="@+id/layout_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_15"
                    android:layout_toRightOf="@+id/tv_header_style"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_header"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/c1_image2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_shop_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:text=""
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/common_txt_size" />

                            <TextView
                                android:id="@+id/tv_tag1"
                                style="@style/rectangle_category_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:gravity="center"
                                android:paddingBottom="2dp"
                                android:paddingLeft="@dimen/dp_5"
                                android:paddingRight="@dimen/dp_5"
                                android:paddingTop="2dp"
                                android:text="物业认证"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/tv_tag2"
                                style="@style/rectangle_red_tag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:gravity="center"
                                android:paddingBottom="2dp"
                                android:paddingLeft="@dimen/dp_5"
                                android:paddingRight="@dimen/dp_5"
                                android:paddingTop="2dp"
                                android:text="物业认证"
                                android:visibility="gone"
                                android:textColor="@color/color_red_d54824"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/layout_person"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_5">

                            <LinearLayout
                                android:id="@+id/layout_left_person"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="联系人    ："
                                    android:textColor="@color/color_gray_666666"
                                    android:textSize="@dimen/common_txt_size" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/layout_left_person"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_person"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:text=""
                                    android:textColor="@color/color_gray_666666"
                                    android:textSize="@dimen/common_txt_size" />

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_shop_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_5">

                            <LinearLayout
                                android:id="@+id/layout_left_shop_mobile"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"

                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="联系电话"
                                    android:textColor="@color/color_gray_666666"
                                    android:textSize="@dimen/common_txt_size" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:text="："
                                    android:textColor="@color/color_gray_666666"
                                    android:textSize="@dimen/common_txt_size" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/layout_left_shop_mobile"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_shop_mobile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:text=""
                                    android:textColor="@color/color_gray_666666"
                                    android:textSize="@dimen/common_txt_size" />

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_shop_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_marginLeft="@dimen/dp_15">

                            <LinearLayout
                                android:id="@+id/layout_left_shop_address"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="营业地址："
                                    android:textColor="@color/color_gray_666666"
                                    android:textSize="@dimen/common_txt_size" />

                            </LinearLayout>
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/color_gray_e5e5e5"/>
            <RelativeLayout
                android:id="@+id/layout_sort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20">

                <LinearLayout
                    android:id="@+id/layout_left_sort"
                    android:layout_width="@dimen/dp_85"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_map_shop_sort"
                        android:textColor="@color/color_gray_666666"
                        android:textSize="@dimen/common_txt_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="："
                        android:textColor="@color/color_gray_666666"
                        android:textSize="@dimen/common_txt_size" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_toRightOf="@+id/layout_left_sort"
                    android:gravity="left|center_vertical"
                    android:text=""
                    android:textColor="@color/color_gray_666666"
                    android:textSize="@dimen/common_txt_size" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15">

                <LinearLayout
                    android:id="@+id/layout_left_business"
                    android:layout_width="@dimen/dp_85"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_map_shop_main_bissness"
                        android:textColor="@color/color_gray_666666"
                        android:textSize="@dimen/common_txt_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="："
                        android:textColor="@color/color_gray_666666"
                        android:textSize="@dimen/common_txt_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_business"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/layout_left_business"
                    android:background="@null"
                    android:text=""
                    android:textColor="@color/color_gray_666666"
                    android:textSize="@dimen/common_txt_size" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="22dp"
                android:background="@color/color_gray_e5e5e5" />

            <RelativeLayout
                android:id="@+id/layout_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">

                <LinearLayout
                    android:id="@+id/layout_left_company"
                    android:layout_width="@dimen/dp_85"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_map_shop_company"
                        android:textColor="@color/color_gray_666666"
                        android:textSize="@dimen/common_txt_size" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="："
                        android:textColor="@color/color_gray_666666"
                        android:textSize="@dimen/common_txt_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_toRightOf="@+id/layout_left_company"
                    android:text=""
                    android:textColor="@color/color_gray_666666"
                    android:textSize="@dimen/common_txt_size" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_license"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15">

                <LinearLayout
                    android:id="@+id/layout_left_license"
                    android:layout_width="@dimen/dp_105"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dp_15"
                        android:text="@string/txt_map_shop_license"
                        android:textColor="@color/color_gray_666666"
                        android:textSize="@dimen/common_txt_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_license"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/layout_left_license"
                    android:background="@null"
                    android:text=""
                    android:textColor="@color/color_gray_666666"
                    android:textSize="@dimen/common_txt_size" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_legal_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15">

                <LinearLayout
                    android:id="@+id/layout_left_legal_name"
                    android:layout_width="@dimen/dp_85"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_map_shop_legal_name"
                        android:textColor="@color/color_gray_666666"
                        android:textSize="@dimen/common_txt_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="："
                        android:textColor="@color/color_gray_666666"
                        android:textSize="@dimen/common_txt_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_legal_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/layout_left_legal_name"
                    android:text=""
                    android:textColor="@color/color_gray_666666"
                    android:textSize="@dimen/common_txt_size" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textview_style"
                        android:text="@string/txt_map_shop_license_photo"
                        android:textColor="@color/color_gray_666666"
                        android:textSize="@dimen/common_txt_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_licensePositive"
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="@dimen/dp_80"
                            android:layout_weight="1"
                            android:background="@color/color_gray_eeeeee" />

                        <ImageView
                            android:id="@+id/iv_licenseReverse"
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="@dimen/dp_80"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@color/color_gray_eeeeee" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textview_style"
                        android:text="@string/txt_map_shop_legal_idcard"
                        android:textColor="@color/color_gray_666666"
                        android:textSize="@dimen/common_txt_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_legalCardPositive"
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="@dimen/dp_80"
                            android:layout_weight="1"
                            android:background="@color/color_gray_eeeeee" />

                        <ImageView
                            android:id="@+id/iv_legalCardReverse"
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="@dimen/dp_80"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@color/color_gray_eeeeee" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
