<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.project.community.ui.me.all_order.GoodsOrderActivity">

    <include layout="@layout/pub_layout_toolbar"/>

    <com.project.community.view.MyScrollview
        android:descendantFocusability="blocksDescendants"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goods_order_shouhou_type1"
                style="?android:attr/windowTitleStyle"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:text="等待商家处理.."
                android:background="@color/color_orange_ff961b"
                android:layout_width="match_parent"
                android:layout_height="62dp" />

            <LinearLayout
                android:id="@+id/goods_order_shouhou_type2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/goods_order_tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="20dp"
                    android:text="@string/my_order_end"
                    android:textColor="@color/yellow_ff961b"
                    android:textSize="@dimen/sp_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/goods_order_view_type_1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@drawable/dot_goods_type" />

                        <View
                            android:id="@+id/goods_order_view_type_left"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_weight="1"
                            android:background="@color/yellow_ff961b" />

                        <View
                            android:id="@+id/goods_order_view_type_2"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@drawable/dot_goods_type" />

                        <View
                            android:id="@+id/goods_order_view_type_right"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_weight="1"
                            android:background="@color/yellow_ff961b" />

                        <View
                            android:id="@+id/goods_order_view_type_3"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@drawable/dot_goods_type" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp">

                    <TextView
                        android:id="@+id/goods_order_tv_type_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="@string/my_order_wait_fahuo"
                        android:textColor="@color/yellow_ff961b"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/goods_order_tv_type_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/my_order_end"
                        android:textColor="@color/yellow_ff961b"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/goods_order_tv_type_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/my_order_wait_yishouhuo"
                        android:textColor="@color/yellow_ff961b"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/color_gray_f4f4f4" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingRight="15dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:src="@mipmap/d24_icon1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/goods_order_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货人: 西贝"
                        android:textColor="@color/color_gray_333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/goods_order_tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:text="一区5号楼1单元1001"
                        android:textColor="@color/color_gray_666666"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/goods_order_tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13884242797"
                        android:textColor="@color/color_gray_666666"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:textColor="@color/yellow_ff961b"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_gray_bg" />

            <TextView
                android:id="@+id/goods_order_tv_shop_name"
                android:textColor="@color/color_gray_333333"
                android:singleLine="true"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:text="香格里拉"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/goods_order_rv_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_gray_f4f4f4">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/goods_order_tv_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_gray_f4f4f4"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/goods_order_reason"
                android:textColor="@color/color_orange_ff961b"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/goods_order_tv_pingzheng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_gray_f4f4f4"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="12dp"
                android:text="@string/goods_order_pingzheng"
                android:textColor="@color/color_orange_ff961b"
                android:textSize="12sp" />

            <GridView
                android:id="@+id/goods_order_rv_pingzheng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_gray_f4f4f4"
                android:horizontalSpacing="6dp"
                android:numColumns="3"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />

            <TextView
                android:id="@+id/goods_order_tv_order_type"
                android:textColor="@color/color_gray_999999"
                android:singleLine="true"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:gravity="center_vertical|right"
                android:textSize="14sp"
                android:text="已取消"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_gray_bg" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/goods_order_heji"
                    android:textColor="@color/color_gray_333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/goods_order_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥42"
                    android:textColor="@color/color_orange_ff961b"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_gray_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/goods_order_type"
                    android:textColor="@color/color_gray_333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/goods_order_tv_type4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已发货"
                    android:textColor="@color/color_orange_ff961b"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_gray_bg" />

            <TextView
                android:id="@+id/goods_order_tv_jiaoyidanhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="交易单号:  315151121212"
                android:textColor="@color/color_gray_999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/goods_order_tv_xiadan_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="下单时间:  2016-03-06   09:00:00"
                android:textColor="@color/color_gray_999999"
                android:textSize="12sp" />


            <LinearLayout
                android:id="@+id/goods_order_ll_pinglun"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/common_gray_bg" />
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:singleLine="true"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:text="评论"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_gray_bg" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/goods_order_rv_pinglun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/common_gray_bg" />


        </LinearLayout>
    </com.project.community.view.MyScrollview>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_height">
        <RelativeLayout
            android:id="@+id/goods_order_shouhou_type3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_item_height"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <TextView
                android:id="@+id/goods_order_btn_type1"
                android:layout_toLeftOf="@+id/goods_order_btn_type2"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/press_type_gray_666666"
                android:gravity="center"
                android:text="@string/all_order_fahuo"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/color_gray_666666"
                android:textSize="@dimen/sp_16" />
            <TextView
                android:id="@+id/goods_order_btn_type2"
                android:layout_toLeftOf="@+id/goods_order_btn_type3"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/press_type_gray_666666"
                android:gravity="center"
                android:text="@string/all_order_fahuo"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/color_gray_666666"
                android:textSize="@dimen/sp_16" />
            <TextView
                android:id="@+id/goods_order_btn_type3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/press_type_gray_666666"
                android:gravity="center"
                android:text="@string/all_order_fahuo"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/color_gray_666666"
                android:textSize="@dimen/sp_16" />
        </RelativeLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/goods_order_shouhou_type4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/goods_order_shouhou_type4_tv1"
                android:visibility="visible"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:gravity="center"
                android:background="@drawable/background_toolbar_gradient"
                android:text="@string/all_order_fahuo"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/goods_order_shouhou_type4_tv2"
                android:visibility="visible"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:text="@string/all_order_jujuechuli"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
             <TextView
                 android:id="@+id/goods_order_shouhou_type4_tv3"
                android:visibility="visible"
                android:layout_weight="1"
                android:textColor="@color/color_gray_666666"
                android:textSize="@dimen/sp_16"
                android:gravity="center"
                android:background="@color/white"
                android:text="@string/all_order_chuli"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
