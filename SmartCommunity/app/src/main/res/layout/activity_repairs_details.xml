<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/pub_layout_toolbar" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_gray_999999"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_tv_times"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_gray_999999"
                        android:textSize="14sp" />


                </LinearLayout>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/d95_icon2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="-6dp">

                        <TextView
                            android:id="@+id/tv_orderType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#103375"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_orderNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/color_gray_333333"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_roomNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/color_gray_999999"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_roomAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/color_gray_999999"
                        android:textSize="12sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_green_aac62d"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_evaluate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/button_shape_gray"
                        android:paddingBottom="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/color_gray_666666"
                        android:textSize="12sp" />


                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_gray_eeeeee" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类型："
                    android:textColor="@color/color_gray_999999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_order_types"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_gray_333333"
                    android:textSize="14sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:textColor="@color/color_gray_333333"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/bbs_item_big_img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="15dp"
                    android:scaleType="centerCrop"
                    android:src="@color/black"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/bbs_item_ll_two_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/bbs_item_ll_two_img_1"
                        android:layout_width="match_parent"
                        android:layout_height="122dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@color/black" />

                    <ImageView
                        android:id="@+id/bbs_item_ll_two_img_2"
                        android:layout_width="match_parent"
                        android:layout_height="122dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bbs_item_ll_three_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/bbs_item_ll_three_img_1"
                        android:layout_width="match_parent"
                        android:layout_height="111dp"
                        android:layout_marginRight="6dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@color/black" />

                    <ImageView
                        android:id="@+id/bbs_item_ll_three_img_2"
                        android:layout_width="match_parent"
                        android:layout_height="111dp"
                        android:layout_marginRight="6dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@color/black" />

                    <ImageView
                        android:id="@+id/bbs_item_ll_three_img_3"
                        android:layout_width="match_parent"
                        android:layout_height="111dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@color/black" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约时间段："
                    android:textColor="@color/color_gray_999999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_bespeak_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_gray_333333"
                    android:textSize="14sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_gray_e5e5e5" />

            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_typess"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:textColor="#aac62d"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_gray_e5e5e5" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>
</LinearLayout>