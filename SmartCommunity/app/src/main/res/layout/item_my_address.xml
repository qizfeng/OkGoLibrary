<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="毛杜拉"
            android:textColor="@color/color_gray_333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15000000000"
            android:textColor="@color/color_gray_333333"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal"
        android:text="朝阳区建国路朝阳区建国路朝阳区建国路朝阳区建国路朝阳区建国路朝阳区建国路"
        android:textColor="@color/color_gray_666666"
        android:textSize="@dimen/sp_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/color_gray_e5e5e5" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@mipmap/d10_btn1_p" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:text="设为默认地址"
            android:textColor="#103375"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_change"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginRight="27dp"
            android:src="@mipmap/d62_icon1_p" />

        <ImageView
            android:id="@+id/iv_del"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@mipmap/d62_icon2_p" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_gray_e5e5e5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_gray_eeeeee" />
</LinearLayout>